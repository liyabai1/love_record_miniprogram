/* pages/mine/mine.wxss */
.userInfoContainer {
  width: 100%;
}

.bg {
  width: 100%;
  height: 200px;
  /* background-color: #ffffff; */
  border-radius: 0 0 50% 50%;
  backdrop-filter: blur(50px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 0;
}

.userInfoBox {
  position: relative;
  width: 100%;
  z-index: 2;
}
.avatar {
  display: block;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin: auto;
  margin-top: -35px;
  z-index: 5;
}
.nickName,
.scorebox {
  display: block;
  text-align: center;
  margin-top: 5px;
}
.nickName {
  font-size: 20px;
}
.score {
  color: var(--getscore-color);
  font-weight: bolder;
}

.functionArea {
  width: 80%;
  margin-top: 10px;
  margin-bottom: 10px;
  border-radius: 10px;
  backdrop-filter: blur(5px);
  box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.05);
}
.functionItem {
  width: 90%;
  margin: -1px auto;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #ccccff;
  border-bottom: 1px solid #ccccff;
  box-sizing: border-box;
  padding: 15px 5px;
}
.functionItem:first-child {
  border-top: none;
}
.functionItem:last-child {
  border-bottom: none;
}
