/* pages/awardList/awardList.wxss */
.container {
  width: 100%;
  margin: 0 auto;
}

.awardListContainer {
  width: 90%;
  padding: 10px;
}

.item {
  padding: 10px 10px;
  margin-bottom: 20px;
  backdrop-filter: blur(5px);
  box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info {
  display: flex;
  flex-direction: column;
  padding-right: 20px;
}
.content,
.score {
  padding: 5px 0px;
}

.scoreNum {
  color: var(--spendscore-color);
  font-weight: bolder;
}
