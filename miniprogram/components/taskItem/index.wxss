/* components/taskItem/index.wxss */
.taskItemContainer {
  display: flex;
  flex-direction: row;
  /* background-color: rgba(255, 255, 255, 0.3); */
  backdrop-filter: blur(5px);
  border-radius: 10px;
  box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.05);
  padding: 10px;
  margin: 20px 0px;
}

.takInfoContainer {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  padding-left: 10px;
}

.taskName {
  line-height: 2em;
  font-weight: bolder;
}
.taskScore {
  font-size: 14px;
  line-height: 2em;
}
.score {
  color: var(--getscore-color);
  font-weight: bolder;
}

.optionContainer {
  margin: auto;
}
